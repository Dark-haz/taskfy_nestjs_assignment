generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:taskify.db"
}

model Employee {
  employee_id  Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  role         String
  Availability Availability[]
  Project      Project[]
  WorkLog      WorkLog[]
}

model Availability {
  availability_id Int      @id @default(autoincrement())
  employee_id     Int
  date            DateTime
  start_time      DateTime
  end_time        DateTime

  employee Employee @relation(fields: [employee_id], references: [employee_id])
}

model Project {
  project_id      Int    @id @default(autoincrement())
  name            String
  description     String
  allocated_hours Int
  employee_id     Int?
  status          String

  manager Employee? @relation(fields: [employee_id], references: [employee_id])
  WorkLog WorkLog[]
}

model WorkLog {
  worklog_id   Int      @id @default(autoincrement())
  employee_id  Int
  project_id   Int
  hours_logged Float
  log_date     DateTime

  employee Employee @relation(fields: [employee_id], references: [employee_id])
  project  Project  @relation(fields: [project_id], references: [project_id])
}
